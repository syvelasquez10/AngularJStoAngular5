<?xml version="1.0" encoding="UTF-8"?>
<Angularjs:AngularJSApp
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:Angularjs="https://uniandes.edu.co/angular"
    xsi:schemaLocation="https://uniandes.edu.co/angular angularjs.ecore">
  <templates>
    <setenciahtml
        name="Html">
      <markup
          xsi:type="Angularjs:Directiva"
          name="ng-app">
        <referencia
            objeto="//@modules.0"/>
      </markup>
    </setenciahtml>
    <setenciahtml
        name="div">
      <propiedades
          name="class"
          valor="container"/>
    </setenciahtml>
    <setenciahtml>
      <markup
          xsi:type="Angularjs:CurlyBraces">
        <expresion
            valor="">
          <referencia
              objeto="//@modules.0/@controller.0/@funcion.0"
              name="calcularCuenta()"/>
        </expresion>
        <filtro
            name="currency"
            parametros="&quot;&quot;"/>
      </markup>
    </setenciahtml>
  </templates>
  <modules name="primeraApp"
      parametro="//@parametros.0">
    <controller
        name="appController"
        parametro="//@parametros.0">
      <funcion
          name="calcularCuenta"
          parametro="//@parametros.0">
        <variable
            name="contador"/>
        <referencia
            objeto="//@modules.0/@services.0"
            name="sumar()"/>
      </funcion>
    </controller>
    <services
        name="Sumar"
        parametro="//@parametros.0">
      <funcion
          name="sumar"/>
    </services>
  </modules>
  <parametros
      name="rootScope"/>
</Angularjs:AngularJSApp>
